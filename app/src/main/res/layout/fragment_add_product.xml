<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="295dp"
        android:layout_height="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Ajout d'un produit"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="120dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:inputType="text"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="201dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:hint="Nom du produit"
        />
    <EditText
        android:id="@+id/limitNumber"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="278dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:hint="Limite du stock"

        />
    <EditText
        android:id="@+id/current"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="355dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:hint="Stock actuel"
        />

    <Button
        android:id="@+id/confirm"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:backgroundTint="#0066FF"
        android:text="Ajouter"
        android:padding="10dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="656dp" />

    <ImageButton
        android:id="@+id/productDetailBackButton"
        android:layout_width="31dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="347dp"
        android:background="@color/white"
        android:contentDescription="@string/productDetailBackButton"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>